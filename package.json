{
  "name": "solidity-to-abi",
  "version": "1.0.0",
  "description": "Converts Solidity method interface string to a web3 ABI interface object.",
  "scripts": {
    "start": "npm test",
    "npmcheckversion": "node ./internals/scripts/npmcheckversion.js",
    "nodejscheckversion": "node ./internals/scripts/nodejscheckversion.js",
    "preinstall": "npm run npmcheckversion && npm run nodejscheckversion",
    "test": "mocha src/tests/**/*.js -R spec  --compilers js:babel-core/register",
    "prebuild": "npm run test && rimraf dist && mkdir dist",
    "build": "npm run build:browserify",
    "build:browserify": "node ./node_modules/browserify/bin/cmd.js src -o dist/solidity-to-abi.js -s solidityToABI -t [ babelify --presets [ es2015 ] ]",
    "prepublish": "npm run build",
    "release": "npmpub",
    "pretest": "npm run lint",
    "lint": "npm run lint:js",
    "lint:eslint": "eslint --ignore-path .gitignore",
    "lint:js": "npm run lint:eslint -- . ",
    "lint:staged": "lint-staged",
    "coveralls": "cat ./coverage/lcov/lcov.info | coveralls"
  },
  "authors": [
    "Nick Dodson <nick.dodson@consensys.net>"
  ],
  "engines": {
    "npm": ">=3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/SilentCicero/solidity-to-abi.git"
  },
  "main": "src/index.js",
  "files": [
    "CONTRIBUTING.md",
    "scripts",
    "dist",
    "src",
    "docs",
    "!**/__tests__"
  ],
  "keywords": [
    "default",
    "SilentCicero"
  ],
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "babel-cli": "^6.10.1",
    "babel-core": "^6.7.7",
    "babel-eslint": "^6.0.4",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-stage-0": "^6.5.0",
    "babelify": "^7.3.0",
    "browserify": "^13.1.1",
    "chai": "^3.5.0",
    "coveralls": "^2.11.9",
    "cross-env": "^1.0.7",
    "eslint": "^2.10.1",
    "eslint-config-airbnb": "^9.0.1",
    "eslint-import-resolver-webpack": "^0.2.4",
    "eslint-plugin-import": "^1.8.0",
    "eslint-plugin-jsx-a11y": "^1.2.0",
    "eslint-plugin-react": "^5.1.1",
    "eventsource-polyfill": "^0.9.6",
    "lint-staged": "^1.0.1",
    "lodash": "^4.13.1",
    "minimist": "^1.2.0",
    "mocha": "^2.4.5",
    "pre-commit": "^1.1.3",
    "prompt": "^1.0.0",
    "replace-in-file": "^2.0.1",
    "rimraf": "^2.5.2",
    "sinon": "^2.0.0-pre"
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "lint-staged": {
    "lint:eslint": "*.js"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": "airbnb",
    "env": {
      "node": true,
      "mocha": true,
      "es6": true
    },
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module"
    },
    "rules": {
      "import/no-unresolved": 2,
      "comma-dangle": [
        2,
        "always-multiline"
      ],
      "indent": [
        2,
        2,
        {
          "SwitchCase": 1
        }
      ],
      "no-console": 1,
      "max-len": 0,
      "prefer-template": 2,
      "no-use-before-define": 0,
      "newline-per-chained-call": 0,
      "arrow-body-style": [
        2,
        "as-needed"
      ]
    }
  },
  "pre-commit": "lint:staged"
}
